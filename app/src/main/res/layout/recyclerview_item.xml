<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_16dp"
    android:elevation="@dimen/dimen_16dp"
    app:cardBackgroundColor="@color/color5"
    app:cardCornerRadius="@dimen/dimen_16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/blog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:lineSpacingExtra="4sp"
            android:padding="4dp"
            android:text="@string/blog_title"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_24sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blog_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_4dp"
                android:lineSpacingExtra="@dimen/dimen_4dp"
                android:padding="@dimen/dimen_4dp"
                android:text="@string/blog_author"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_16sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/blog_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_4dp"
                android:lineSpacingExtra="@dimen/dimen_4dp"
                android:padding="@dimen/dimen_4dp"
                android:text="@string/blog_date"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_16sp"
                android:typeface="sans" />
        </LinearLayout>

        <TextView
            android:id="@+id/blog_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:lineSpacingExtra="4sp"
            android:padding="4dp"
            android:text="@string/blog_detail"
            android:textAlignment="textStart"
            android:minLines="3"
            android:maxLines="3"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_20sp"
            android:typeface="serif" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>