<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color2"
    android:fitsSystemWindows="true"
    tools:context=".DetailArticleActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color5">

                <TextView
                    android:id="@+id/detailed_blog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:lineSpacingExtra="4sp"
                    android:padding="@dimen/dimen_8dp"
                    android:text="@string/articles_title"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/dimen_24sp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detailed_blog_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:lineSpacingExtra="4sp"
                    android:padding="@dimen/dimen_8dp"
                    android:text="@string/articles_author"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_16sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/detailed_blog_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:lineSpacingExtra="4sp"
                    android:padding="@dimen/dimen_8dp"
                    android:text="@string/articles_date"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_16sp"
                    android:typeface="sans" />
            </LinearLayout>

            <TextView
                android:id="@+id/detailed_blog_para1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8dp"
                android:lineSpacingExtra="4sp"
                android:textAllCaps="true"
                android:padding="@dimen/dimen_8dp"
                android:text="@string/blog_detail"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="@dimen/dimen_18sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/detailed_blog_para2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8dp"
                android:lineSpacingExtra="4sp"
                android:padding="@dimen/dimen_8dp"
                android:text="@string/blog_detail"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="@dimen/dimen_18sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/detailed_blog_para3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8dp"
                android:lineSpacingExtra="4sp"
                android:padding="@dimen/dimen_8dp"
                android:text="@string/blog_detail"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="@dimen/dimen_18sp"
                android:typeface="serif" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>