<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color2"
    android:fitsSystemWindows="true"
    tools:context=".DetailBlogActivity">

    <TextView
        android:id="@+id/detailed_blog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8dp"
        android:lineSpacingExtra="4sp"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/blog_title"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textIsSelectable="true"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_32sp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detailed_blog_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8dp"
        android:lineSpacingExtra="4sp"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/blog_detail"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textIsSelectable="true"
        android:textSize="@dimen/dimen_24sp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailed_blog_title" />


</androidx.constraintlayout.widget.ConstraintLayout>